{
  "manifest_version": 3,
  "name": "Read It Later",
  "version": "2.1.0",
  "description": "Save articles with one click and organize them with color-coded categories. A simple, visual way to manage what you want to read. Completely free with automatic metadata extraction and instant sync.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "256": "icon256.png",
      "512": "icon512.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}